{
  "manifest_version": 2,
  "name": "Paranoia Password Manager",
  "version": "0.0.1",
  "default_locale": "en",
  "description": "__MSG_extension_description__",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/state_icons/unauthenticated.png"
    },
    "default_popup": "popup.html",
    "default_title": "Ppm Popup"
  },
  "options_ui": {
    "page": "settings.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "icons": {
    "128": "images/paranoia_128.png",
    "32": "images/paranoia_32.png",
    "48": "images/paranoia_48.png",
    "64": "images/paranoia_64.png"
  },
  "omnibox": {
    "keyword": "PPM"
  },
  "content_security_policy": "default-src 'self' 'unsafe-eval'; connect-src http://*:* https://*:*; script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; img-src 'self' http://www.google-analytics.com/__utm.gif; object-src 'self'; style-src 'self' 'unsafe-inline'",
  "permissions": [
    "tabs",
    "idle",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
